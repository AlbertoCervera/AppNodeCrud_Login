extends layout 

block content
 .container 
        h1 Register
        .formulario 
            form(action="/register", method="post") 
                label Username 
                input(type="text", name="username")
                label Email
                input(type="email", name="email")
                label Password
                input(type="password", name="password")
                input(type="submit", value="Entrar")
